@model IEnumerable<Thing.Models.Order>

@{
    ViewBag.Title = "Cart";
}

<h2>Cart</h2>

<table class="table">
    <thead>
        <tr>
            <th scope="col">Name</th>
            <th scope="col">Price</th>
            <th scope="col">Count</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in @Model)
        {
            <tr>
                <td>@order.Product.Name</td>
                <td>@order.Product.Price</td>
                <td>@order.Count</td>
                <td>
                    <div class="btn-group">
                        <a class="btn btn-danger" href="@Url.Action("DeleteFromCart", "Cart", new { productId = order.ProductId })">Delete</a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>

    
