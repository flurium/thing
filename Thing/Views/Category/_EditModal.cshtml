<!-- Modal for edit category -->
<div class="modal fade" id="editModal" tabindex="-1" aria-labelledby="editModal" aria-hidden="true">
    <div class="modal-dialog">
        <form asp-action="Edit" class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Edit category</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <input type="hidden" id="category-id" name="Id" />
                <input type="text" class="form-control" id="category-name" name="Name" placeholder="Name">
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-dark" data-bs-dismiss="modal">Back</button>
                <input type="submit" value="Confirm" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>

<script>
    var modal = document.getElementById('editModal')
    modal.addEventListener('show.bs.modal', function (event) {
        var button = event.relatedTarget

        var id = button.getAttribute('data-bs-id')
        var name = button.getAttribute('data-bs-name')

        var categoryNameInput = modal.querySelector('#category-name')
        categoryNameInput.value = name

        var categoryIdInput = modal.querySelector('#category-id')
        categoryIdInput.value = id
    })
</script>